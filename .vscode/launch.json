{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug Next.js App",
        "runtimeExecutable": "node",
        "runtimeArgs": [
          "--inspect-brk",
          "./node_modules/next/dist/bin/next",
          "dev"
        ],
        "cwd": "${workspaceFolder}",
        "env": {
          "NODE_ENV": "development"
        },
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
      }
    ]
  }
  